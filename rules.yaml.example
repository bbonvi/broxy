server:
  listen: 0.0.0.0
  port: 3128

proxies:
  - name: proxy_google
    type: http
    host: proxy1.example.com
    port: 8080

  - name: proxy_reddit
    type: socks5
    host: proxy2.example.com
    port: 1080
    auth:
      username: user
      password: pass

  - name: direct
    type: direct

rules:
  - match: domain
    value: ".google.com"
    proxy: proxy_google

  - match: domain
    value: ".reddit.com"
    proxy: proxy_reddit

  - match: default
    proxy: direct
